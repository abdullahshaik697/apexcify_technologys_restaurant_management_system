<!DOCTYPE html>
<html>
<head>
  <title>Place Order</title>
</head>
<body>
  <h1>Place an Order</h1>

  <form action="/api/home/order" method="POST">
    <label>Select Table:</label>
    <select name="tableNumber" required>
      <% tables.forEach(table => { %>
        <option value="<%= table._id %>">Table <%= table.tableNumber %></option>
      <% }) %>
    </select>
    <br><br>

    <h3>Menu Items</h3>
    <% menuItems.forEach(item => { %>
      <div>
        <label>
          <%= item.name %> - Rs.<%= item.price %>
        </label>
        <input type="number" name="items[][menuItemId]" value="<%= item._id %>" hidden>
        <input type="number" name="items[][quantity]" placeholder="Qty" min="1">
      </div>
    <% }) %>

    <br>
    <button type="submit">Place Order</button>
  </form>
</body>
</html>
