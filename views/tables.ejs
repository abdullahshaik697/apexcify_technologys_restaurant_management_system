  <hr class="my-6">

  <!-- Tables List -->
  <div class="max-w-3xl mx-auto bg-white p-6 rounded-lg shadow-lg overflow-x-auto">
    <table class="min-w-full border border-gray-300 divide-y divide-gray-200">
      <thead class="bg-gray-100">
        <tr>
          <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Table No</th>
          <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Capacity</th>
          <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Status</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% allTables.forEach(table => { %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 text-gray-800"><%= table.tableNumber %></td>
            <td class="px-6 py-4 text-gray-800"><%= table.capacity %></td>
            <td class="px-6 py-4 text-gray-800"><%= table.isAvailable %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
